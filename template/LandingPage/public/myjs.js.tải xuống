$(document).ready(function(){
  $("#filterAll").click(function(){
    $(".grid").isotope({filter: '*'});
  });

  $("#filterRed").click(function(){
    $(".grid").isotope({filter: '.red'});
  });

  $("#filterWhite").click(function(){
    $(".grid").isotope({filter: '.white'});
  });

   $("#filterRose").click(function(){
    $(".grid").isotope({filter: '.rose'});
  });

    $("#filterSparkling").click(function(){
    $(".grid").isotope({filter: '.sparkling'});
  });

    var chieucao = $(".menu__mon").height;
    console.log(chieucao);
});

